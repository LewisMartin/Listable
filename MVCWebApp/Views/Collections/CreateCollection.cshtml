@model Listable.MVCWebApp.ViewModels.Collections.CreateCollectionViewModel

@{
    ViewData["Title"] = "Create collection";
}

<div class="listable-collections-container">
    <div class="listable-collections-title">
        Create new collection
    </div>
    <div class="listable-collections-form">
        <form method="post" id="createcollection">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
        </form>
    </div>
    <div class="listable-collections-btns">
        <button type="submit" form="createcollection"><i class="fa fa-check" aria-hidden="true"></i></button>
        <a href="@Url.Action("Overview", "Collections", null, null)"><div><span><i class="fa fa-arrow-left" aria-hidden="true"></i></span></div></a>
    </div>
    <div asp-validation-summary="All"></div>
</div>

