@model Listable.MVCWebApp.ViewModels.Collections.DeleteCollectionViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="listable-collections-container">
    <div class="listable-collections-title">
        Delete collection
    </div>
    <div class="listable-collections-form">
        <form method="post" id="deletecollection">
            <select id="collectionselect" asp-for="SelectedCollection" asp-items="@Model.Collections"></select>
        </form>
    </div>
    <div class="listable-collections-btns">
        <button type="submit" form="deletecollection"><i class="fa fa-check" aria-hidden="true"></i></button>
        <a href="@Url.Action("Overview", "Collections", null, null)"><div><span><i class="fa fa-arrow-left" aria-hidden="true"></i></span></div></a>
    </div>
    <div asp-validation-summary="All"></div>
</div>

